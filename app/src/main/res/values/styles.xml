<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--全屏主题-->
    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>



    <style name="public_pop_add_ainm" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/public_dialog_center_in</item>
        <item name="android:windowExitAnimation">@anim/public_dialog_center_out</item>
    </style>
    <style name="public_dialog_add_ainm" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/public_dialog_buttom_in</item>
        <item name="android:windowExitAnimation">@anim/public_dialog_buttom_out</item>
    </style>
    <style name="public_msgdialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
